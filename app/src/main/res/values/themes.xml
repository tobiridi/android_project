<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ExamProject" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <!-- button style -->
    <style name="btn_cancel">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:backgroundTint">@color/red</item>
    </style>

    <style name="btn_confirm">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="backgroundTint">@color/green</item>
    </style>

    <style name="btn_validate">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="backgroundTint">@color/orange</item>
    </style>

    <style name="btn_add_image">
        <item name="android:layout_margin">10dp</item>
        <item name="backgroundTint">@color/blue</item>
        <item name="android:text">@string/add_an_image_text</item>
        <item name="android:drawableLeft">@drawable/ic_add_photo_alternate_48px</item>
    </style>

    <!-- textView style -->
    <style name="tv_title">
        <item name="android:textSize">30sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="tv_information">
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:scrollbars">horizontal</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- editText style -->
    <style name="et_input">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:scrollbars">horizontal</item>
    </style>

</resources>
