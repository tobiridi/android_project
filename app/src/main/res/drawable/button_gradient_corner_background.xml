<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#2196F3" />
            <corners
                android:radius="10dp" />
            <gradient
                android:startColor="#2196F3"
                android:endColor="#2196F3" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#252196F3" />
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />
            <corners
                android:radius="10dp" />
            <gradient
                android:endColor="#252196F3" />
        </shape>
    </item>

</selector>